{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Listen for Xdebug",
        "type": "php",
        "request": "launch",
        "port": 9003,
        "hostname": "0.0.0.0",
        "pathMappings": {
          "/usr/src/app/content/themes/test-theme": "${workspaceRoot}"
        }
      },
      {
        "name": "Launch currently open script",
        "type": "php",
        "request": "launch",
        "program": "${file}",
        "cwd": "${fileDirname}",
        "port": 9003,
        "hostname": "0.0.0.0",
        "pathMappings": {
          "/usr/src/app/content/themes/test-theme": "${workspaceRoot}"
        }
      }
    ]
  }
